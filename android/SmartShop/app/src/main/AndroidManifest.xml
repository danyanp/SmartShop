<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.smartshop.danyanpi.smartshop">
    <uses-permission android:name="android.permission.READ_CONTACTS"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WRITE_CONTACTS"/>
    <application
        android:allowBackup="true"
        android:icon="@mipmap/icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.stock.StockActivity" android:label="@string/nav_stock"/>
        <activity android:name=".activities.addgood.Addgoods"/>
        <activity android:name=".activities.addgood.Addcategory"/>
        <activity android:name=".activities.addgood.Dataanalysis"/>
        <activity android:name=".activities.infomanage.Goodsmanage" />
        <activity android:name=".activities.infomanage.Categorymanage"/>
        <activity android:name=".LoginActivity" android:theme="@style/AppTheme.Dark"/>
        <activity android:name=".SignupActivity" android:theme="@style/AppTheme.Dark"/>
    </application>

</manifest>